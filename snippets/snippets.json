    "Disc": {
        "prefix": "disc",
        "description": "Insert a disc",
        "body": [
            "disc {",
            "\t<${2:0}, ${3:0}, ${4:0}>, <${5:0}, ${6:1}, ${7:0}>, ${8:1}",
            "\t${0}",
            "}"
        ]
    },
    "Disc Object": {
        "prefix": "#declare disc",
