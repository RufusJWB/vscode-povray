    "Blob": {
        "prefix": "blob",
        "description": "Insert a blob",
        "body":[
            "blob {",
            "\tthreshold ${2:0.5}",
            "\tsphere {",
            "\t\t<${3:-0.6}, ${4:0}, ${5:0}>, ${6:1}, ${7:1}",
            "\t}",
            "\tsphere {",
            "\t\t<${8:0.6}, ${9:0}, ${10:0}>, ${11:1}, ${12:1}",
            "\t}",
            "\t${0}",
            "}"
        ]
    },
    "Blob Object": {
        "prefix": "#declare blob",
        "description": "Declare a blob object",
        "body":[
            "#declare ${1:MyBlob} = blob {",
            "\tthreshold ${2:0.5}",
            "\tsphere {",
            "\t\t<${3:-0.6}, ${4:0}, ${5:0}>, ${6:1}, ${7:1}",
            "\t}",
            "\tsphere {",
            "\t\t<${8:0.6}, ${9:0}, ${10:0}>, ${11:1}, ${12:1}",
            "\t}",
            "\t${0}",
            "}",
            "object {",
            "\t${1:MyBlob}",
            "}"
        ]
    },
