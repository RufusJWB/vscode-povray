    "Texture": {
        "prefix": "texture",
        "description": "Insert a texture block",
        "body": [
            "texture {",
            "\t${0}",
            "\tpigment { ",
            "\t\tcolor rgb<${1:1.0}, ${2:1.0}, ${3:1.0}, 0.0, 0.0> // <red, green, blue, filter, transmit>",
            "\t}",
            "\tnormal {",
            "\t\tbumps ${4:0.0} scale ${5:0.25}",
            "\t}",
            "\tfinish {",
            "\t\tphong ${6:0.25}",
            "\t\treflection { ",
            "\t\t\t${7:0.00} metallic ${8:0.00}",
            "\t\t}",
            "\t} ",
            "}"
        ]
    },
    "Pigment": {
        "prefix": "pigment",
        "description": "Insert a pigment block",
        "body": [
            "pigment { ",
            "\tcolor rgb<${1:1.0}, ${2:1.0}, ${3:1.0}, 0.0, 0.0> // <red, green, blue, filter, transmit>",
            "}"
        ]
    },
    "Normal": {
        "prefix": "normal",
        "description": "Insert a normal block",
        "body": [
            "normal {",
            "\tbumps ${1:0.0} scale ${2:0.25}",
            "}"
        ]
    },
    "Finish": {
        "prefix": "finish",
        "description": "Insert a finish block",
        "body": [
            "finish {",
            "\tphong ${1:0.25}",
            "\treflection { ",
            "\t\t${2:0.00} metallic ${3:0.00}",
            "\t}",
            "}"
        ]
    },
    "Union": {
