            "}"
        ]
    },
    "Box": {
        "prefix": "box",
        "description": "Insert a box",
        "body": [
            "box {",
            "\t<${2:-1}, ${3:-1}, ${4:-1}>, <${5:1}, ${6:1}, ${6:1}> // <x, y, z> near lower left corner, <x, y, z> far upper right corner",
            "\t${0}",
            "}"
        ]
    },
    "Box Object": {
        "prefix": "#declare box",
