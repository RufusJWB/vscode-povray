    "Polygon": {
        "prefix": "polygon",
        "description": "Insert a polygon",
        "body":[
            "polygon {",
            "\t${2:4} // Number of points",
            "\t<${3:0}, ${4:0}>, <${5:0}, ${6:1}>, <${7:1}, ${8:1}>, <${9:1}, ${10:0}> // point1, point2, point3, point4",
            "\t${0}",
            "}"
        ]
    },
    "Polygon Object": {
        "prefix": "#delcare polygon",
        "description": "Declare a polygon object",
        "body":[
            "#declare ${1:MyPolygon} = polygon {",
            "\t${2:4} // Number of points",
            "\t<${3:0}, ${4:0}>, <${5:0}, ${6:1}>, <${7:1}, ${8:1}>, <${9:1}, ${10:0}> // point1, point2, point3, point4",
