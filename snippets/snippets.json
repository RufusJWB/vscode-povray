    "Cone": {
        "prefix": "cone",
        "description": "Insert a cone",
        "body":[
            "cone {",
            "\t<${2:0}, ${3:-1}, ${4:0}>, ${5:1.0} // <x, y, z>, center & radius of one end",
            "\t<${6:0}, ${7:1}, ${8:0}>, ${9:0.25} // <x, y, z>, center & radius of the other end",
            "\t${0}",
            "}"
        ]
    },
    "Cone Object": {
