    "Cylinder": {
        "prefix": "cylinder",
        "description": "Insert a cylinder",
        "body":[
            "cylinder {",
            "\t<${2:0}, ${3:0}, ${4:-1}>, <${5:0}, ${6:0}, ${7:1}>, ${8:1} // center of one end, center of other end, radius",
            "\topen // remove end caps",
            "\t${0}",
            "}"
        ]
    },
    "Cylinder Object": {
        "prefix": "#declare cylinder",
